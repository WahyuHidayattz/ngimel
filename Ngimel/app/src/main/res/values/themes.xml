<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ngimel" parent="ThemeLight">
    </style>

    <style name="SplashTheme" parent="Theme.Ngimel">
        <item name="android:navigationBarColor">@color/light_color_primary</item>
    </style>

    <style name="Ngimel.Dialog" parent="Base.DialogLight"/>

    <style name="Base.DialogLight" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary</item>
        <item name="colorAccent">@color/light_color_accent</item>
        <item name="android:windowBackground">@color/light_backgrouynd_color</item>
        <item name="android:textColorPrimary">@color/light_text_color_primary</item>
        <item name="android:textColorSecondary">@color/light_text_color_secondary</item>
        <item name="stroke_color">@color/light_stroke_color</item>
        <item name="card_background">@color/light_card_background_color</item>
    </style>

    <style name="Base.DialogDark" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary</item>
        <item name="colorAccent">@color/dark_color_accent</item>
        <item name="android:windowBackground">@color/dark_backgrouynd_color</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="stroke_color">@color/dark_stroke_color</item>
        <item name="card_background">@color/dark_card_background_color</item>
    </style>

    <!-- light themes -->
    <style name="ThemeLight" parent="Base.ThemeLight">
    </style>

    <style name="Base.ThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary</item>
        <item name="colorAccent">@color/light_color_accent</item>
        <item name="android:windowBackground">@color/light_backgrouynd_color</item>
        <item name="android:textColorPrimary">@color/light_text_color_primary</item>
        <item name="android:textColorSecondary">@color/light_text_color_secondary</item>
        <item name="stroke_color">@color/light_stroke_color</item>
        <item name="card_background">@color/light_card_background_color</item>
    </style>

    <!-- dark theme -->
    <style name="ThemeDark" parent="Base.ThemeDark">
    </style>

    <style name="Base.ThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary</item>
        <item name="colorAccent">@color/dark_color_accent</item>
        <item name="android:windowBackground">@color/dark_backgrouynd_color</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="stroke_color">@color/dark_stroke_color</item>
        <item name="card_background">@color/dark_card_background_color</item>
    </style>
</resources>